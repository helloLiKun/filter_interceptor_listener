<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <listener>
        <listener-class>listener.CountListener</listener-class>
    </listener>
    <filter>
        <filter-name>filterFirst</filter-name>
        <filter-class>filter.FilterFirst</filter-class>
        <init-param>
            <param-name>test</param-name>
            <param-value>test_value</param-value>
        </init-param>
        <init-param>
            <param-name>test1</param-name>
            <param-value>test_value1</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>filterSecond</filter-name>
        <filter-class>filter.FilterSecond</filter-class>
        <init-param>
            <param-name>test</param-name>
            <param-value>test_value</param-value>
        </init-param>
    </filter>
    <!--过滤器根据filter-mapping的书写顺序从上而下执行 -->
    <filter-mapping>
        <filter-name>filterSecond</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>filterFirst</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>jspServlet</servlet-name>
        <servlet-class>servlet.JspServlet</servlet-class>
        <init-param>
            <param-name>test</param-name>
            <param-value>test_value</param-value>
        </init-param>
        <init-param>
            <param-name>test1</param-name>
            <param-value>test_value</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>jspServlet</servlet-name>
        <url-pattern>/jsp</url-pattern>
    </servlet-mapping>
    <!-- 设置session有效时间-->
    <session-config>
        <session-timeout>1</session-timeout>
    </session-config>
</web-app>